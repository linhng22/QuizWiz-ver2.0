@model ProjectStudyTool.Models.CardSet

@{
    ViewData["Title"] = "Delete this card set?";
}

<header class="masthead">
    <div class="container px-5 py-4">
        <h1>@ViewData["Title"]</h1>
    </div>
</header>

<section>
    <div class="container px-5 py-4">
        <div>
            <dl class="row mb-5">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>

            <form asp-action="DeleteConfirmed" asp-route-id="@Model.CardSetId" method="post">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-outline-secondary ms-2" asp-action="Index">Back to List</a>
            </form>
        </div>

    </div>
</section>