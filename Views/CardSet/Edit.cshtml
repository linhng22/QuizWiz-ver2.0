@model ProjectStudyTool.Models.CardSet

@{
    ViewData["Title"] = "Edit Card Set";
}

<header class="masthead">
    <div class="container px-5 py-4">
        <h1>@ViewData["Title"]</h1>
    </div>
</header>

<section>
    <div class="container px-5">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CardSetId" />
                    <input type="hidden" asp-for="UserId" />
                    <div class="form-group mb-5">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4">
                        <input type="submit" value="Save" class="btn btn-primary rounded px-3 pb-2 mb-2 mb-lg-0 me-3" />
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back to List</a>
                    </div>
                </form>
            </div>
        </div>


    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
