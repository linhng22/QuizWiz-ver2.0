@model ProjectStudyTool.Models.Card

@{
    ViewData["Title"] = "Edit Card";
}

<header class="masthead">
    <div class="container px-5 py-4">
        <h1>@ViewData["Title"]</h1>
    </div>
</header>

<section>
    <div class="container px-5">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CardId" />
                    <div class="form-group mb-3">
                        <label asp-for="CardSetId" class="control-label">Card Set</label>
                        <select asp-for="CardSetId" class="form-control" asp-items="ViewBag.CardSetId"></select>
                        <span asp-validation-for="CardSetId" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="QuestionId" />
                    <div class="form-group mb-3">
                        <label asp-for="Question" class="control-label"></label>
                        <input asp-for="Question" class="form-control" />
                        <span asp-validation-for="Question" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-5">
                        <label asp-for="Answer" class="control-label"></label>
                        <input asp-for="Answer" class="form-control" />
                        <span asp-validation-for="Answer" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a class="btn btn-outline-secondary ms-2" asp-controller="Card" asp-action="Set" asp-route-id="@Model.CardSetId">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
