@model IEnumerable<ProjectStudyTool.Models.CardDto>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
@{
    var loggedIn = User.Identity!.IsAuthenticated;
    var totalCount = @Model.Count();
}

<section class="h-100">
    <div class="container px-5 py-4">
        <h1>@ViewBag.CardSetName</h1>

        <div id="flashcard-count">
            <span id="current-flashcard-id"></span> / <span id="total-flashcards">@totalCount</span>
        </div>
        <div id="flashcard-container">
            <div id="flashcard" class="flashcard" onclick="toggleFlashcard()" tabindex="0" onkeydown="checkKey(event)">
                <div>
                    <p id="flashcardHeader" class="text-muted">Question</p>
                </div>
                <div class="question">@Html.DisplayFor(model => model.FirstOrDefault()!.Question)</div>
                <div class="answer">@Html.DisplayFor(model => model.FirstOrDefault()!.Answer)
                </div>
            </div>
        </div>

        <div id="navigation-arrows">
            <button class="btn btn-secondary rounded px-3 pb-2 mb-2 mb-lg-0 me-3"
                onclick="previousFlashcard()"><i class="fas fa-arrow-left"></i>
            </button>
            <button class="btn btn-secondary rounded px-3 pb-2 mb-2 mb-lg-0 me-3"
                onclick="nextFlashcard()"><i class="fas fa-arrow-right"></i>
            </button>
        </div>

        <div class="container mt-5">
            @if (loggedIn)
            {
                <div>
                    <a class="btn btn-primary" asp-action="Create" asp-route-id="@ViewContext.RouteData.Values["id"]">
                        Add New Card</a>
                </div>

                <table class="table mt-5">
                    <thead>
                        <tr>
                            <th>
                                Question
                            </th>
                            <th>
                                Answer
                            </th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Question)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Answer)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.CardId"
                                        class="btn btn-outline-primary btn-sm">
                                        Edit
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.CardId"
                                        class="btn btn-outline-danger btn-sm">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</section>

<script>
    window.flashcards = @Html.Raw(Json.Serialize(Model));
</script>
<script src="~/js/site.js"></script>